  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "title": "Name",
      "markdownDescription": "./descriptions/sections/settings/name.md",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/languages"
        }
      ]
    },
    "class": {
      "title": "Class",
