{
  "$schema": "../package/vscode/configuration.json",
  // ENGINE
  "liquid.engine": "shopify",
  // CONFIG FILE BASE URL
  "liquid.config.baseUrl": "",
  "liquid.config.method": "liquidrc",
  // SETTINGS TARGET
  "liquid.settings.target": "user",
  // FILES
  "liquid.files.11ty": {
    "data": [],
    "includes": [],
    "layouts": []
  },
  "liquid.files.shopify": {
    "locales": "",
    "settings": "",
    "sections": [],
    "snippets": []
  },
  // COMPLETIONS
  "liquid.completion.filters": true,
  "liquid.completion.objects": true,
  "liquid.completion.operators": true,
  "liquid.completion.properties": true,
  "liquid.completion.schema": true,
  "liquid.completion.sections": true,
  "liquid.completion.tags": true,
  // HOVERS
  "liquid.hover.filters": true,
  "liquid.hover.schema": true,
  "liquid.hover.tags": true,
  // VALIDATIONS
  "liquid.validate.schema": true,
  // DEPRECATED
  "liquid.format.commentIndent": false,
  "liquid.format.wrap": 0,
  "liquid.format.crlf": false,
  "liquid.format.endNewLine": false,
  "liquid.format.indentSize": 2,
  "liquid.format.preserveLine": 3,
  "liquid.format.markup": {},
  "liquid.format.style": {},
  "liquid.format.script": {},
  "liquid.format.json": {},
  // FORMATTING
  "liquid.format.ignore": [],
  "liquid.format.rules": {
    // NEW RULES
    "ignore": [],
    // GLOBALS
    "wrap": 0,
    "wrapFraction": 0,
    "preset": "default",
    "crlf": false,
    "endNewline": false,
    "indentChar": " ",
    "indentSize": 2,
    "preserveLine": 3,
    // DEPRECATED OR UPDATED RULES
    "endNewLine": false,
    // LIQUID FORMATTING
    "liquid": {
      "commentIndent": false,
      "commentNewline": false,
      "forceArgument": 0,
      "forceFilter": 0,
      "indentAttribute": false,
      "preserveInternal": false,
      "delimiterTrims": "preserve",
      "dedentTagList": [],
      "delimiterPlacement": "preserve",
      "ignoreTagList": [],
      "lineBreakSeparator": "before",
      "normalizeSpacing": true,
      "preserveComment": false,
      "quoteConvert": "single",
      // DEPRECATED LIQUID RULES
      "valueForce": "intent"
    },
    // MARKUP FORMATTING
    "markup": {
      "attributeCasing": "preserve",
      "attributeSort": false,
      "commentIndent": false,
      "delimiterTerminus": "inline",
      "ignoreCSS": false,
      "ignoreJS": true,
      "ignoreJSON": false,
      "lineBreakValue": "preserve",
      "preserveAttribute": false,
      "selfCloseSVG": false,
      "stripAttributeLines": false,
      "commentNewline": false,
      "forceAttribute": false,
      "forceIndent": false,
      "preserveComment": false,
      "preserveText": true,
      "quoteConvert": "double",
      "selfCloseSpace": false,
      // DEPRECATED LIQUID RULES
      "forceLeadAttribute": false,
      "preserveAttributes": false,
      "ignoreScripts": false,
      "ignoreStyles": false,
      "correct": false,
      "attributeSortList": [],
      "delimiterTrims": "preserve",
      "lineBreakSeparator": "default",
      "normalizeSpacing": true,
      "valueForce": "intent"
    },
    // JSON FORMATTING
    "json": {
      "arrayFormat": "indent",
      "braceAllman": true,
      "bracePadding": true,
      "objectIndent": "indent",
      "objectSort": false,
    },
    // STYLE FORMATTING
    "style": {
      "classPadding": false,
      "commentNewline": false,
      "correct": false,
      "noLeadZero": false,
      "quoteConvert": "double",
      "sortProperties": false,
      "sortSelectors": false,
      "atRuleSpace": false,
      "commentIndent": false,
      "preserveComment": false
    },
    // SCRIPT FORMATTING
    "script": {
      "arrayFormat": "indent",
      "commentIndent": false,
      "commentNewline": false,
      "preserveComment": false,
      "braceAllman": false,
      "braceNewline": false,
      "bracePadding": false,
      "caseSpace": false,
      "correct": false,
      "elseNewline": false,
      "endComma": "never",
      "functionNameSpace": false,
      "functionSpace": false,
      "methodChain": 3,
      "neverFlatten": false,
      "noCaseIndent": false,
      "noSemicolon": false,
      "objectIndent": "default",
      "objectSort": false,
      "quoteConvert": "single",
      "ternaryLine": false,
      "variableList": false,
      "vertical": false
    }
  }
}