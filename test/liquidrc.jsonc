{
  "$schema": "../package/liquidrc.json",
  // ENGINE
  "engine": "shopify",
  //
  // FILES
  "files": {
    "locales": "",
    "sections": [],
    "settings": "",
    "snippets": [],
    "schema": []
  },
  //
  // NOT ALLOWED
  "ignore": [],
  "wrap": 0,
  "crlf": false,
  "endNewLine": false,
  "indentSize": 2,
  "preserveLine": 3,
  "markup": {},
  "script": {},
  "style": {},
  "json": {},
  //
  // FORMATTING
  "format": {
    //
    // IGNORED FILES
    "ignore": [],
    //
    // GLOBALS
    "wrap": 0,
    "crlf": false,
    "indentSize": 2,
    "preserveLine": 3,
    //
    // LIQUID FORMATTING
    "liquid": {
      "commentIndent": false,
      "commentNewline": false,
      "delimiterTrims": "preserve",
      "ignoreTagList": [],
      "lineBreakSeparator": "before",
      "normalizeSpacing": true,
      "preserveComment": false,
      "quoteConvert": "single",
      "dedentTagList": [],
      "delimiterPlacement": "preserve",
      "forceArgument": 0,
      "forceFilter": 0,
      "indentAttribute": false,
      "preserveInternal": false
    },
    //
    // MARKUP FORMATTING
    "markup": {
      "attributeCasing": "preserve",
      "attributeSort": false,
      "commentIndent": false,
      "commentNewline": false,
      "forceAttribute": false,
      "forceIndent": false,
      "preserveComment": false,
      "preserveText": true,
      "quoteConvert": "double",
      "selfCloseSpace": false,
      "delimiterTerminus": "inline",
      "ignoreCSS": false,
      "ignoreJS": false,
      "ignoreJSON": false,
      "lineBreakValue": "align",
      "preserveAttribute": false,
      "selfCloseSVG": false,
      "stripAttributeLines": false,
      //
      // DEPRECATED LIQUID RULES
      //
      "delimiterTrims": "preserve",
      "lineBreakSeparator": "default",
      "normalizeSpacing": true,
      "valueForce": "intent",
      "forceLeadAttribute": false,
      "ignoreScripts": false,
      "ignoreStyles": false,
      "preserveAttributes": false,
    },
    //
    // JSON FORMATTING
    "json": {
      "arrayFormat": "indent",
      "braceAllman": true,
      "bracePadding": true,
      "objectIndent": "indent",
      "objectSort": false,
    },
    //
    // STYLE FORMATTING
    "style": {
      "classPadding": false,
      "commentNewline": false,
      "correct": false,
      "noLeadZero": false,
      "quoteConvert": "double",
      "sortProperties": false,
      "sortSelectors": false,
      "atRuleSpace": false,
      "commentIndent": false,
      "preserveComment": false
    },
    //
    // SCRIPT FORMATTING
    "script": {
      "arrayFormat": "indent",
      "braceAllman": false,
      "braceNewline": false,
      "bracePadding": false,
      "caseSpace": false,
      "correct": false,
      "elseNewline": false,
      "endComma": "never",
      "functionNameSpace": false,
      "functionSpace": false,
      "methodChain": 3,
      "neverFlatten": false,
      "noCaseIndent": false,
      "noSemicolon": false,
      "objectIndent": "default",
      "objectSort": false,
      "quoteConvert": "single",
      "ternaryLine": false,
      "variableList": false,
      "vertical": false,
      "commentIndent": false,
      "commentNewline": false,
      "preserveComment": false
    }
  }
}